// Problem Statement: Write a function that takes two parameters n and k and returns the value of
// Binomial Coefficient C(n, k)

#include<iostream>
using namespace std;

int binomialCoeff(int n,int k){
    if(k > (n-k)){
        k = n-k;
    }
    int res = 1;
    for(int i = 0; i< k;i++){
        res *= (n-i);
        res /= (i+1);
    }
    return res;
}

int main(){
    int n,k;
    cout<< "Enter the value of n : ";
    cin>> n;
    cout<< "Enter the value of k : ";
    cin >> k;
    cout<<"Binomail coeefient : "<<binomialCoeff(n,k) <<endl;

    return 0;
}
