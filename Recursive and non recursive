#include <iostream>
using namespace std;

// Recursive function
int fibRecursive(int n) {
    if (n <= 1)
        return n;
    return fibRecursive(n - 1) + fibRecursive(n - 2);
}

// Non-recursive (Iterative) function
void fibIterative(int n) {
    int a = 0, b = 1, c;
    cout << "Iterative Fibonacci Series: ";
    for (int i = 0; i < n; i++) {
        cout << a << " ";
        c = a + b;
        a = b;
        b = c;
    }
    cout << endl;
}

int main() {
    int n;

    cout << "Enter how many Fibonacci numbers to print: ";
    cin >> n;

    // Non-Recursive
    fibIterative(n);

    // Recursive
    cout << "Recursive Fibonacci Series: ";
    for (int i = 0; i < n; i++) {
        cout << fibRecursive(i) << " ";
    }
    cout << endl;

    return 0;
}
